# list
nama_depan = input("masukkan nama depan anda :")
nama_belakang = input("masukkan nama belakang anda :")
nama = nama_depan + nama_belakang
tinggi = int(input("masukkan tinggi anda :"))
berat_badan = int(input("masukkan berat badan anda :"))
tahun_lahir = int(input("masukkan tahun kelahiran anda :"))
umur = 2022 - tahun_lahir
status = input("masukkan status anda :")

print ("""Hai, perkenalkan nama saya {}, memiliki tinggi badan {} cm, dan berat badan {} kg.
Saya lahir pada tahun {} dan saat ini saya berusia {} Tahun, status sebagai {}.""".format(nama,tinggi,berat_badan,tahun_lahir,umur,status))
       
# percabangan
username = input("masukkan username anda :")
password = input("masukkan passwor anda :")

if username == "fitriani" and password == "ftryny":
    print("login sukses")
else :
    print("login gagal")

# perulangan
for a in range (0,101,5):
    print(a)
    
for i in range(1,101):
    if i % 3 == 0 and i % 5 == 0:
        print(i)
